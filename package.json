{
    "name": "vscode-js-import",
    "displayName": "vscode-js-import",
    "description": "",
    "version": "0.1.0",
    "publisher": "wangtao0101",
    "repository": {
        "type": "git",
        "url": "https://github.com/wangtao0101/vscode-js-import.git"
    },
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*",
        "onCommand:extension.shortcutImport"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
            "command": "extension.shortcutImport",
            "title": "Shortcut Import"
        }],
        "keybindings": [{
            "command": "extension.shortcutImport",
            "key": "ctrl+alt+j",
            "mac": "cmd+alt+j",
            "when": "editorFocus"
        }],
        "configuration": {
            "type": "object",
            "title": "js import configuration",
            "properties": {
                "js-import.root": {
                    "type": "string",
                    "default": "/src",
                    "description": "the source dir, currently we only support single root"
                },
                "js-import.alias": {
					"type": "object",
					"description": "module alias like webpack alias, not support nested alias path, e.g { util: 'src/util/' }",
					"default": ""
				},
                "js-import.filesToScan": {
                    "type": "string",
                    "default": "**/*.{jsx,js}",
                    "description": "Glob for files to watch and scan, e.g ./src/** ./src/app/**/*.js. Defaults to **/*.{jsx,js}"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
